<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="File_Converter_Utility.ConvertPNGToJPEGPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:File_Converter_Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="36, 40, 36, 40">
        <TextBlock Text="PNG To JPEG" Style="{ThemeResource TitleTextBlockStyle}" Margin="0, 0, 0, 36"/>

        <TextBox x:Name="ImagePath" IsReadOnly="True" PlaceholderText="Image Path:" Margin="0, 0, 0, 12"/>
        <Button x:Name="SelectImageButton" Content="Select Image" Click="SelectImage" Margin="0, 0, 0, 16"/>
        
        <TextBox x:Name="OutputFolderPath" IsReadOnly="True" PlaceholderText="Output Image Folder:" Margin="0, 0, 0, 12"/>
        <Button x:Name="SelectOutputFolderButton" Content="Select Output Folder" Click="SelectOutputImage" Margin="0, 0, 0, 16"/>

        <TextBlock Text="Output Quality" Margin="0, 0, 0, 8" Style="{ThemeResource BodyTextBlockStyle}"/>
        <Grid Margin="0, 0, 0, 16" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Slider x:Name="QualitySlider" Value="75" VerticalAlignment="Center" Grid.Column="0" Minimum="0" Maximum="100" ValueChanged="QualitySlider_ValueChanged"/>
            <TextBlock x:Name="QualityText" VerticalAlignment="Center" Grid.Column="1" Text="75%"/>
        </Grid>

        <Button x:Name="ConvertButton" Content="Convert" IsEnabled="False" Margin="0, 0, 0, 16" Click="ConvertButton_Click"/>
        <ProgressRing x:Name="progressRing" IsActive="False" HorizontalAlignment="Left"/>
    </StackPanel>
</Page>
