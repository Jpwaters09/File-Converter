<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="File_Converter_Utility.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:File_Converter_Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="File Converter">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TitleBar x:Name="TitleBar" Grid.Row="0" Title="File Converter">
            <TitleBar.LeftHeader>
                <ImageIcon Height="16" Margin="16, 0, 0, 0" Source="ms-appx:///Images/File Converter Logo.png"/>
            </TitleBar.LeftHeader>
        </TitleBar>
        
        <NavigationView Grid.Row="1" IsBackButtonVisible="Collapsed" SelectionChanged="NavBarSelectionChanged" x:Name="NavBar">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" ToolTipService.ToolTip="Home" Content="Home" Tag="HomePage" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"/>
                <NavigationViewItemHeader Content="Convert"/>
                <NavigationViewItem Icon="Pictures" ToolTipService.ToolTip="Image" Content="Image" Tag="ImagePage" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent">
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItemHeader Content="Convert From"/>
                        <NavigationViewItem ToolTipService.ToolTip="PNG" Content="PNG" Tag="ConvertPNG" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent">
                            <NavigationViewItem.MenuItems>
                                <NavigationViewItemHeader Content="Convert To"/>
                                <NavigationViewItem ToolTipService.ToolTip="BMP" Content="BMP" Tag="ConvertPNGToBMP" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"/>
                                <NavigationViewItem ToolTipService.ToolTip="EPS" Content="EPS" Tag="ConvertPNGToEPS" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"/>
                                <NavigationViewItem ToolTipService.ToolTip="GIF" Content="GIF" Tag="ConvertPNGToGIF" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"/>
                                <NavigationViewItem ToolTipService.ToolTip="ICO" Content="ICO" Tag="ConvertPNGToICO" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"/>
                                <NavigationViewItem ToolTipService.ToolTip="JPEG" Content="JPEG" Tag="ConvertPNGToJPEG" FocusVisualPrimaryBrush="Transparent" FocusVisualSecondaryBrush="Transparent"/>
                            </NavigationViewItem.MenuItems>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</Window>
